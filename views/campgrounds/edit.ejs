<% include ../partials/header %>
<div class="container">
    <h1 class="text-center">Edit <%= campground.name %></h1>
    <div style="width: 30%; margin: 30px auto; ">
        <form action="/campgrounds/<%= campground._id %>?_method=PUT" method="POST">
            <div class="form-group">
                <input class="form-control" type="text" name="nameLand" value="<%= campground.name %>">
            </div>
            <div class="form-group">
                <input class="form-control" type="text" name="imageUrl" value="<%= campground.image %>"> 
            </div>
            <div class="form-group">
                <input class="form-control" type="text" name="description" value="<%= campground.description %>"> 
            </div>
            <div class="form-group">
                <button class="btn btn-success btn-block">Submit to POST</button>
            </div>
        </form>
        <a href="/campgrounds">Back</a>
    </div>
</div>
<% include ../partials/footer %>
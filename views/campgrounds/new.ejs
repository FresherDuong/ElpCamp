<% include ../partials/header %>
<div class="container">
    <h1 class="text-center">Create a new Camp Ground</h1>
    <div style="width: 30%; margin: 30px auto; ">
        <form action="/campgrounds" method="POST">
            <div class="form-group">
                <input class="form-control" type="text" name="nameLand" placeholder="Name of landscape">
            </div>
            <div class="form-group">
                <input class="form-control" type="text" name="imageUrl" placeholder="Image URL"> 
            </div>
            <div class="form-group">
                <input class="form-control" type="text" name="description" placeholder="Description"> 
            </div>
            <div class="form-group">
                <button class="btn btn-success btn-block">Submit to POST</button>
            </div>
        </form>
        <a href="/campgrounds">Back</a>
    </div>
</div>
<% include ../partials/footer %>
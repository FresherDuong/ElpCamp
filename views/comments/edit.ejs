<% include ../partials/header %> 
<div class="container">
    <h1 class="text-center">Edit comment</h1>
    <div style="width: 30%; margin: 30px auto; ">
        <form action="/campgrounds/<%= campground_id %>/comments/<%= comment._id %>?_method=PUT" method="POST">
            <div class="form-group">
                <input class="form-control" type="text" name="text" value="<%= comment.text %>"> 
            </div>
            <div class="form-group">
                <button class="btn btn-success btn-block">Submit to POST</button>
            </div>
        </form>
        <a href="/campgrounds">Back</a>
    </div>
</div>
